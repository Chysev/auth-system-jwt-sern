{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "lib": ["ESNext"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": ".",
    "outDir": "./build",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "types": ["./types/index.d.ts", "./types/express-types.d.ts"]
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules", "build"]
}
